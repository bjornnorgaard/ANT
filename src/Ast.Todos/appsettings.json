{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Hangfire": "Warning",
        "Elastic.Apm": "Error"
      }
    }
  },
  "AllowedOrigins": "*",
  "DatabaseOptions": {
    "TodoDatabase": "Server=localhost;Database=Todos;User=SA;Password=yourStrong(!)Password;TrustServerCertificate=True"
  },
  "SwaggerOptions": {
    "ApplicationTitle": "Todo Api"
  },
  "LoggingOptions": {
    "ApplicationName": "Todo Api",
    "ElasticSearchUrl": "http://localhost:9200"
  },
  "HangfireOptions": {
    "ConnectionString": "Server=localhost;Database=Todos;User=SA;Password=yourStrong(!)Password;TrustServerCertificate=True",
    "EnabledHangfire": true
  },
  "ElasticApm": {
    "ServiceName": "Todo Api",
    "ServerUrls": "http://localhost:8200",
    "Environment": "Development"
  }
}
